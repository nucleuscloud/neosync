{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "resolveJsonModule": true
  },
  "include": [
    "./src/**.ts"
  ],
}
